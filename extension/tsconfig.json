{
	"compilerOptions": {
		"target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
		"jsx": "react",
		"outDir": "out",
		"lib": ["es2015", "dom", "es6", "dom.iterable", "scripthost"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   
		"baseUrl": ".",
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"types": ["vscode"],
		"paths": {
		  "@/*": ["./src/view/app/*"]
		}
	},
	"include": [
		"src/**/*",
		"src/types", 
		"src/**/*.tsx"
		],
	"exclude": [
		"node_modules",
		".vscode-test",
		"**/view/app/index.css",
		"**/view/app/index.tsx",
		"**/view/app/tsconfig.json",
		"**/view/app/config.tsx"
	]
}
